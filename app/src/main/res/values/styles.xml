<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/copy</item>
    </style>

    <style name="PolicyTitle">
        <item name="android:textSize">@dimen/subheading_txt</item>
        <item name="android:textColor">@color/copy</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="PolicyInfo">
        <item name="android:textSize">@dimen/body_txt</item>
        <item name="android:textColor">@color/copy_light</item>
    </style>

    <style name="EmptyText">
        <item name="android:textSize">@dimen/subheading_txt</item>
        <item name="android:textColor">@color/copy</item>
    </style>

    <style name="Attention">
        <item name="android:textSize">@dimen/body_txt</item>
        <item name="android:textColor">@color/attention</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
